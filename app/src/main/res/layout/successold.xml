<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textSize="40dp"
            android:textColor="#000000"
            android:id="@+id/textView28" />

        <TextView
            android:text="Successful!!"
            android:textSize="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/textView28"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView29" />

        <TextView
            android:text="Thank You. Your order details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView29"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#414141"
            android:textSize="24dp"
            android:id="@+id/textView31" />

        <TextView
            android:text="will be sent to your e-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView31"
            android:textColor="#414141"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView32" />

        <TextView
            android:text=" shortly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView32"
            android:layout_centerHorizontal="true"
            android:textColor="#414141"
            android:textSize="24dp"
            android:id="@+id/textView34" />

        <RelativeLayout
            android:id="@+id/codlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/textView34">

            <TextView
                android:text="cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textSize="24dp"
                android:id="@+id/textView37"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView35"
                android:layout_toEndOf="@+id/textView35"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

            <TextView
                android:text="Please keep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#414141"
                android:textSize="24dp"
                android:id="@+id/textView35"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:layout_alignBottom="@+id/textView37"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="handy at the time of delivery."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#414141"
                android:textSize="24dp"
                android:id="@+id/textView36"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="42dp"
                android:layout_marginStart="42dp" />

        </RelativeLayout>


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/successhappycart"
            android:id="@+id/imageView"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/codlayout"
            android:layout_alignLeft="@+id/textView29"
            android:layout_alignStart="@+id/textView29" />

    </RelativeLayout>
</ScrollView>
