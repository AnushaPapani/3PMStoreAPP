<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rr_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:background="#F5F1F5">

        <LinearLayout
            android:id="@+id/linear_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_order"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingTop="@dimen/_10dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/linear_img"
            android:paddingLeft="@dimen/_20dp"
            android:text="Blade Bottel Opener"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_twenty"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spin_qty"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt_product_name"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_toRightOf="@id/linear_img"></Spinner>

        <TextView
            android:id="@+id/txt_unitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spin_qty"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_toRightOf="@id/linear_img"
            android:paddingLeft="@dimen/_20dp"
            android:text="Unit Price"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spin_qty"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_toRightOf="@id/txt_unitPrice"
            android:text="200"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_unitPrice"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_toRightOf="@+id/linear_img"
            android:paddingLeft="@dimen/_20dp"
            android:text="Subtotal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_price_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_price"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_toRightOf="@id/txt_subtotal"
            android:text="200"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:src="@drawable/cancel" />
    </RelativeLayout>
</RelativeLayout>