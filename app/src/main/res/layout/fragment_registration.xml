<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_above="@+id/rtimer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:weightSum="1" >

            <!-- Name Label -->

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Register Here"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/inputName1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Full Name*"
                android:textColor="#000" />

            <!-- Input Name -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:autoText="true"
                android:background="@drawable/adresbg" >

                <EditText
                    android:id="@+id/inputName"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dip"
                    android:background="@null"
                    android:contentDescription="Full Name"
                    android:singleLine="true"
                    android:textColor="#000" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/radio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inputName"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/gnder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Gender*"
                    android:textColor="#000" />

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/inputFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:button="@drawable/custom_radio"
                        android:text="  Female "
                        android:textColor="#000" >
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/inputMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:button="@drawable/custom_radio"
                        android:checked="false"
                        android:text="  Male "
                        android:textColor="#000" >
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Email ID*"
                android:textColor="#000" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:autoText="true"
                android:background="@drawable/adresbg" >

                <EditText
                    android:id="@+id/inputEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:contentDescription="Email Id"
                    android:singleLine="true"
                    android:textColor="#000" />
            </RelativeLayout>
            <!-- Password Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Password*"
                android:textColor="#000" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:autoText="true"
                android:background="@drawable/adresbg" >

                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:contentDescription="Password"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#000" />
            </RelativeLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Mobile Number*"
                android:textColor="#000"
                android:id="@+id/mobile"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:autoText="true"
                android:background="@drawable/adresbg"
                android:layout_below="@+id/mobile"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="10dip">

                <EditText
                    android:id="@+id/mobileET"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"

                    android:textColor="#000" />
            </RelativeLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Date Of Birth"
                android:textColor="#000" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:autoText="true"
                android:background="@drawable/adresbg" >

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:editable="false"
                    android:textColor="#000" />
            </RelativeLayout>

            <!--
             ImageView
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/selectdate"
            android:cropToPadding="true"
            android:src="@drawable/calendar_icon" /
            -->

            <Button
                android:id="@+id/btnRegisterUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/buttonorange"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="I&apos;M AWESOME"
                android:textColor="@color/grey"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>